@{
    ViewData["Title"] = "Home Page";
}
@section Styles
{
    <link rel="stylesheet" href="~/css/CardStyles.css" />
    <style>
        #card-element {
            min-width: 350px;
        }

        .margin-top {
            margin-top: 1rem;
        }
    </style>
}
@section Scripts
{
    <script type="text/javascript" src="~/js/payment.js"></script>
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="row">
    <div class="col-md-6">
        Invoice:
        <dl class="row">
            <dt class="col-md-6">Invoice amount</dt>
            <dd class="col-md-6">150 <span>EUR</span></dd>
            <dt class="col-md-6">Transaction fee</dt>
            <dd class="col-md-6">4.74 <span>EUR</span></dd>
            <dt class="col-md-6">Total</dt>
            <dd class="col-md-6">154.74 <span>EUR</span></dd>
        </dl>
        
    </div>
    <div class="col-md-6">
        <form id='payment-form'>
            <div class="md-3">
                <label for="card-element" class="form-label">Card details:</label>
            </div>

            <div class="row g-3 align-items-center">
                <div>
                    <!-- placeholder for Elements -->
                    <div id="card-element"></div>
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-primary">Submit Payment</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div id='alert-placeholder' class="margin-top">
    <div class="alert alert-success alert-dismissible fade" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
</div>

